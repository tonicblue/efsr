{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "declaration": true,
    "outDir": "build/site",
    "sourceMap": true,
    "strict": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": ["site"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}